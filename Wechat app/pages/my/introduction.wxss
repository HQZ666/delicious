/* pages/my/introduction.wxss */
.intro{
    width: 93.6%;
    height: 402rpx;
    margin: 9% auto 0;
    background: #FBCC2E;
    border-radius: 20px;
}
.board{
    width: 100%;
    height: 100%;
    text-align: center;
}
.board text{
    display: block;
    padding-top: 6%;
    height: 14px;
    font-size: 14px;
    color: #FFF;
    line-height: 14px;
}
.board textarea{
    display: block;
    box-sizing: border-box;
    padding: 20rpx;
    margin: 6% auto 0;
    width: 82.4%;
    height: 62%;
    background: #FAECBC;
    border-radius: 12px;
    font-size: 14px;
    color: #555555;
    line-height: 14px;
}
.container{
    width: 100%;
    height: 80rpx;
    margin-top: 4.5%;
}
.container button{
    width: 93.6%;
    height: 80rpx;
    font-size: 18px;
    opacity: 0.3;
    color: #FFFFFF;
    line-height: 80rpx;
    background: #FBCC2E;
    border-radius: 38rpx;
}
.container .save{
    opacity: 1;
}
.container .click{
    opacity: 0.7;
}
